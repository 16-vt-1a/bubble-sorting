
#include "stdafx.h" 
#include <iostream> 
#include <conio.h> 
using namespace std; 

int main() 
{ 
	setlocale(LC_ALL, "Rus"); 
	int X, j, i, n; 
	cout « "Введите количество элементов: "; 
	cin » n; 
	int A[50]; 
	cout « "Введите элементы:" « endl; 
	for (i = 0; i<n; i++) 
	{ 
		cout « "A[" « i « "]="; 
		cin » A[i]; 
	}
	cout « "Заданный порядок: "; 
	for (i = 0; i<n; i++) 
		cout « A[i] « " "; 
	cout « endl; 
	cout « "Отсортированный порядок: "; 
	for (i = 0; i<6 - 1; i++) 
		for (j = 0; j<n - 1 - i; j++) 
			if (A[j]>A[j + 1]) 
			{
				X = A[j]; 
				A[j] = A[j + 1]; 
				A[j + 1] = X; 
			} 
	for (i = 0; i<n; i++) 
		cout « A[i] « " "; 
	cout « endl; 

	system("pause"); 
	return 0; 
}
